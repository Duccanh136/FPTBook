@model Book

@{
    ViewData["Title"] = "Details";
}

<div class="form-group">
  <a asp-controller="Books" asp-action="Index" class="btn btn-primary">
    Back to Index
  </a>
</div>

<div class="card" style="width:400px">
  <img 
    class="card-img-top" 
    src= @Model.ImageUrl
    alt="Book image">
  <div class="card-body">
    <h4 class="card-title">@Model.Title</h4>
    <p class="card-text">Author: @Model.Author.ToString()</p>
    <p class="card-text">Description: @Model.Description.ToString()</p>
    <p class="card-text">ISBN: @Model.ISBN.ToString()</p>
    <p class="card-text">Date Published: @Model.DatePublished.ToString("MM/dd/yyyy")</p>
    <p class="card-text">Price: @Model.Price.ToString()</p>
  </div>
</div>
